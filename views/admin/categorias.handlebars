
<h1>Lista de categorias</h1>

<a href="/admin/categorias/add">
	<button class="btn btn-success">Nova Categoria</button>
</a>

{{#each categorias}}
<div class="card mt-3">
	<div class="card-boby">
		<h5>Categoria: {{nome}}</h5>
		<p>Slug: {{slug}}</p>
		<br>
		<a href="/admin/categorias/editar/{{_id}}"><button class="btn btn-info mt-3">Editar</button></a>
		
		<form action="/admin/categorias/delete/" method="POST">
			<input type="hidden" name="id" value="{{_id}}">
			<button class="btn btn-danger mt-2" type="submit">Deletar</button>
		</form>
	</div>
</div>

{{else}}
<h4 class="mt-3">Não há nada aqui</h4>
{{/each}}