{{/each}}
<h3>Editar categoria</h3>
<div class="card">
	<div class="card-body">
		<form action="/admin/categorias/editar" method="POST">
			<input name="id" type="hidden" value="{{categoria._id}}"/>
			<div class="col-md-6 colo">
				<label for="nome" class="col-form-label">Nome: </label>
				<input type="text" id="nome" name="nome" placeholder="Nome da categoria" class="form-control" 
				value="{{categoria.nome}}" required="required">
			</div>
			<div class="col-md-6">
				<label for="slug" class="col-form-label">Slug: </label>
				<input type="text" id="slug" name="slug" placeholder="Slug de categoria" class="form-control"
				value="{{categoria.slug}}" required="required">
			</div>
			<div class="col-md-12">
				<button type="submit" class="btn btn-success mt-2">Editar</button>
			</div>
			
		</form>
	</div>
</div>